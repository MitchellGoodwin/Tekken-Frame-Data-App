<h1>Edit User Form:</h1>


<% if @user.errors.any? %>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>


<%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %><br>
    <%= f.label :password %>
    <%= f.text_field :password %><br>
    <%= f.label :location %>
    <%= f.text_field :location %><br>
    <%= f.label "Avatar Image Link" %>
    <%= f.text_field :picture_link %><br>
    <%= f.label :bio %>
    <%= f.text_area :bio %>
    <%= f.submit "Edit User" %>
<% end %>